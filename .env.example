# Backend API
# API_HOST=0.0.0.0
# API_PORT=8000

# Database
DATABASE_HOST=your-db-host
# DATABASE_PORT=5432
DATABASE_NAME=your-db-name
DATABASE_USER=your-db-user
DATABASE_PASS=your-db-password
# DATABASE_SSL=true

# Keycloak Authentication (PKCE — no client secret needed)
# KEYCLOAK_URL=https://auth.bodyspec.com/realms/bodyspec
# KEYCLOAK_CLIENT_ID=bodyspec-learn-v1

# App Secret
# SECRET_KEY=dev-secret-key-change-in-production

# Environment
# ENVIRONMENT=development
# LOG_LEVEL=INFO

# Diagram generation (PaperBanana + Google Gemini)
# GOOGLE_API_KEY=your-gemini-api-key

# Frontend (Vite requires these explicitly — no code defaults)
VITE_KEYCLOAK_URL=https://auth.bodyspec.com
VITE_KEYCLOAK_REALM=bodyspec
VITE_KEYCLOAK_CLIENT_ID=bodyspec-learn-v1
